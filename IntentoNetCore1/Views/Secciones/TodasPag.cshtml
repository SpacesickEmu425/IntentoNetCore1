@model IEnumerable<IntentoNetCore1.Models.DB.Paginas>//Se basa en el modelo hecho en la parte de Models para crear un objeto con esos "atributos"


@{
		ViewData["Title"] = "Todas las páginas";
}
<form class="new-page">
		<h2>Todas las páginas</h2>
		<hr>
		<div class="table-responsive">
				<table id="tabla" class="table table-striped table-bordered table-hover">
						<thead class="thead-dark">
								<tr>
										<th scope="col">
												Id
										</th>
										<th scope="col">
												Titulo de la página
										</th>
										<th scope="col">
												Clave
										</th>
										<th scope="col">
												Orden
										</th>
										<th scope="col">
												Contenido
										</th>
										<th scope="col">
												Editar...
										</th>
										<th scope="col">
												Borrar...
										</th>
								</tr>
						</thead>
						<tbody>
								<!--Recorre el modelo de la clase menus creada en el controldador-->
								@foreach (var item in Model)
								{
										<tr>
												<td>
														@item.cla_pag
												</td>
												<td>
														@item.TituloEncabeza
												</td>
												<td>
														@item.cla_menu
												</td>
												<td>
														@item.cla_menupapa
												</td>
												<td>
														<a class="btn btn-dark" type="submit" href="@Url.Action("AgregarSeccionContenidoNueva","Secciones", new { cla_pag = item.cla_pag })">
																Agregar otra sección de contenido
														</a>
														<a class="btn btn-dark" type="submit" href="@Url.Action("ContenidosPagina","Secciones", new { cla_pag = item.cla_pag })">Mostrar contenidos de la página</a>
												</td>
												<td>
														<a class="btn btn-dark" type="submit" href="@Url.Action("ModPag","Secciones", new { cla_pag = item.cla_pag })">
																Editar página
														</a>
												</td>
												<td>
														<a class="btn btn-danger" type="submit" href="@Url.Action("BorrPag","Secciones", new { cla_pag = item.cla_pag })">
																Borrar Página
														</a>
												</td>
										</tr>
								}
						</tbody>
				</table>
		</div>
